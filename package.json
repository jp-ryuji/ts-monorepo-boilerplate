{
  "name": "ts-monorepo-boilerplate",
  "version": "1.0.0",
  "private": true,
  "description": "TypeScript monorepo boilerplate with NestJS API and React frontend",
  "packageManager": "pnpm@10.16.1",
  "scripts": {
    "dev": "concurrently \"pnpm --filter api start:dev\" \"pnpm --filter web dev\"",
    "dev:api": "pnpm --filter api start:dev",
    "dev:web": "pnpm --filter web dev",
    "build": "pnpm --filter api build && pnpm --filter web build",
    "build:api": "pnpm --filter api build",
    "build:web": "pnpm --filter web build",
    "start": "concurrently \"pnpm --filter api start:prod\" \"pnpm --filter web start\"",
    "start:api": "pnpm --filter api start:prod",
    "start:web": "pnpm --filter web start",
    "test": "pnpm --filter api test && pnpm --filter web test",
    "test:api": "pnpm --filter api test",
    "test:web": "pnpm --filter web test",
    "test:watch": "concurrently \"pnpm --filter api test:watch\" \"pnpm --filter web test:watch\"",
    "test:api:watch": "pnpm --filter api test:watch",
    "test:e2e": "pnpm --filter api test:e2e",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "lint-staged": "lint-staged",
    "clean": "rimraf apps/*/dist apps/*/node_modules node_modules",
    "clean:api": "rimraf apps/api/dist apps/api/node_modules",
    "clean:web": "rimraf apps/web/.next apps/web/node_modules",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:build": "docker compose build",
    "docker:logs": "docker compose logs -f",
    "docker:sync": "sh ./scripts/sync-deps.sh",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.3",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "rimraf": "^6.0.1"
  },
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.16.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jp-ryuji/ts-monorepo-boilerplate.git"
  },
  "keywords": [
    "tsmono",
    "boilerplate",
    "nestjs",
    "react",
    "typescript",
    "monorepo",
    "pnpm"
  ],
  "author": "Your Name",
  "license": "MIT"
}
